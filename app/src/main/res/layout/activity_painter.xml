<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".PainterActivity">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffd000"
        >
        <RelativeLayout
            android:id="@+id/painter_left_btnSide"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="3"
            android:background="@drawable/windows_bgwhite"
            >
            <Button
                android:id="@+id/painter_clear"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/clear"
                android:onClick="onClear"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                />

            <TextView
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:text="清除"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/chinese2"
                android:layout_below="@+id/painter_clear"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                />

            <Button
                android:id="@+id/painter_redo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/redo"
                android:onClick="redo"
                android:textColor="@color/black"
                android:layout_below="@+id/painter_clear"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:text="重做"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/chinese2"
                android:layout_below="@+id/painter_redo"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                />
            <Button
                android:id="@+id/painter_undo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/undo"

                android:onClick="undo"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/painter_redo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"

                />
            <TextView
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:text="復原"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/chinese2"
                android:layout_below="@+id/painter_undo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:gravity="center_horizontal"
                />

            <Button
                android:id="@+id/painter_color"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/brush"
                android:onClick="chColor"
                android:layout_below="@id/painter_undo"
                android:layout_toRightOf="@id/painter_redo"
                android:layout_marginLeft="50dp"

                />
            <TextView
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:text="顏色"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/chinese2"
                android:layout_below="@+id/painter_color"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="題目:"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginBottom="17dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/chinese2"
                />

            <TextView
                android:id="@+id/answer"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:textSize="24sp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/topic"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/painter_left_chat"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:background="@drawable/windows_black"
            android:alpha="1.5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <ListView
                        android:id="@+id/chatContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="#ffd000"
        >
        <tw.org.iii.bill.guessgame.MyView
            android:id="@+id/painter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_white"
            />
        <ProgressBar
            android:id="@+id/painter_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/navy"
            android:max="600"
            android:progress="600"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>



</LinearLayout>